<div class="ui centered cards">
  {{#each genres}}

<div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
        <div class="content">

    <p>{{uppercase description}} </p>
  
  </div>
  <div class="metadata">
    <span class="date">Created: {{date}}</span>
</div>
        <div class="extra content">

    <a href="/genre/{{id}}" >   <i class="folder open icon"></i> </a>
    <a href = "/deletegenre/{{id}}" class ="deleteGen" > <i class="trash icon"></i></a>
    </div>
  </div>
{{/each}}
</div>